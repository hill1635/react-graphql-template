  "bugs": {
    "url": "https://github.com/hill1635/react-weather-app/issues"
  },
  "homepage": "https://github.com/hill1635/react-weather-app#readme",
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "apollo-server-express": "^3.13.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.0.1",
    "bcrypt-nodejs": "^0.0.3",
    "connect-mongo": "^3.2.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "graphql": "^16.8.1",
    "if-env": "^1.0.4",
    "mongoose": "^6.4.0",
    "prisma": "^5.7.0"
